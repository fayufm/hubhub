/* macOS风格标题栏 */
.titlebar {
    height: 38px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    user-select: none;
    -webkit-app-region: drag;
    position: relative;
    border-bottom: 1px solid #e1e4e8;
}

.titlebar-drag-region {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    -webkit-app-region: drag;
}

.window-title {
    font-size: 14px;
    color: #333;
    text-align: center;
    flex: 1;
}

.window-controls-container {
    display: flex;
    justify-content: flex-end;
    position: absolute;
    top: 0;
    right: 0;
}

.window-controls {
    display: flex;
    height: 38px;
    align-items: center;
    padding-right: 15px;
    -webkit-app-region: no-drag;
}

.window-control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-left: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: none;
    padding: 0;
}

.window-control svg {
    display: none;
    fill: #555;
}

.window-control:hover svg {
    display: block;
}

.window-close {
    background-color: #ff5f57;
}

.window-minimize {
    background-color: #ffbd2e;
}

.window-maximize {
    background-color: #28c940;
}

.window-close:hover {
    background-color: #ff4d4d;
}

.window-minimize:hover {
    background-color: #ffb524;
}

.window-maximize:hover {
    background-color: #24bb3a;
}

/* 深色主题标题栏 */
body.dark-theme .titlebar {
    background-color: #1a1a1a;
    border-color: #333;
}

body.dark-theme .window-title {
    color: #e1e4e8;
}

body.dark-theme .window-control svg {
    fill: #999;
}

/* 统一搜索框样式 */
.unified-search {
    display: flex;
    position: relative;
    width: 500px;
    max-width: 90vw;
}

.unified-search input {
    width: 100%;
    padding: 15px 55px 15px 20px;
    border: 2px solid #ddd;
    border-radius: 50px;
    font-size: 16px;
    outline: none;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.unified-search input:focus {
    border-color: #2ea44f;
    box-shadow: 0 4px 15px rgba(46, 164, 79, 0.15);
}

.circular-button {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background-color: #2ea44f;
    color: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
}

.circular-button:hover {
    background-color: #2c974b;
    transform: translateY(-50%) scale(1.05);
}

.search-tip {
    text-align: center;
    color: #666;
    font-size: 13px;
    margin-top: 10px;
    opacity: 0.8;
}

/* 深色主题适配 */
body.dark-theme .unified-search input {
    background-color: #2d2d2d;
    border-color: #444;
    color: #e1e4e8;
}

body.dark-theme .unified-search input:focus {
    border-color: #2ea44f;
}

body.dark-theme .search-tip {
    color: #b1b1b1;
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: transparent;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    transition: all 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.2);
}

/* 深色主题滚动条 */
body.dark-theme::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
}

body.dark-theme::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.2);
}

/* 表情搜索按钮样式 */
.circular-button .emoji-face {
    font-size: 18px;
    font-weight: bold;
    font-family: monospace;
    transition: all 0.3s ease;
}

.circular-button.searching .emoji-face {
    animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

/* 为其他滚动容器添加自定义滚动条 */
.modal-content, 
.download-content, 
.settings-content,
.code-container,
.file-explorer,
.file-content {
    overflow-y: overlay;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.1) transparent;
}

/* 深色主题滚动条颜色 */
body.dark-theme .container,
body.dark-theme .modal-content,
body.dark-theme .download-content,
body.dark-theme .settings-content,
body.dark-theme .code-container,
body.dark-theme .file-explorer,
body.dark-theme .file-content {
    scrollbar-color: rgba(255, 255, 255, 0.1) transparent;
}

/* 页面切换样式 */
.page {
    display: none;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.4s ease;
    height: 100%;
    width: 100%;
}

.page.active {
    display: block;
    opacity: 1;
    transform: translateY(0);
}

/* 随机项目页面样式 */
#randomPage {
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

.page-header {
    text-align: center;
    margin-bottom: 30px;
    padding-top: 30px;
}

.page-header h2 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #333;
}

.page-description {
    color: #666;
    font-size: 16px;
    max-width: 600px;
    margin: 0 auto;
}

#randomResults {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    padding: 20px 0;
    min-height: 200px;
    width: 100%;
}

#randomResults .repo-card {
    opacity: 1;
    transform: none;
    display: block;
    visibility: visible;
}

#randomPage .error-message {
    margin: 20px auto;
    max-width: 500px;
}

.loading-random {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 300px;
    color: #666;
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    border-top-color: #2ea44f;
    animation: spin 1s ease-in-out infinite;
    margin-bottom: 15px;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* 深色主题适配 */
body.dark-theme .page-header h2 {
    color: #e1e4e8;
}

body.dark-theme .page-description {
    color: #b1b1b1;
}

body.dark-theme .loading-random {
    color: #b1b1b1;
}

body.dark-theme .loading-spinner {
    border-color: rgba(255, 255, 255, 0.1);
    border-top-color: #2ea44f;
}

