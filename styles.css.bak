* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: #f5f5f5;
    overflow: hidden;
}

.container {
    max-width: 100%;
    margin: 0 auto;
    padding: 10px 20px 80px 20px;
    height: calc(100vh - 38px);
    overflow-y: overlay;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.1) transparent;
}

header {
    text-align: center;
    margin-bottom: 30px;
}

h1 {
    color: #333;
    margin-bottom: 20px;
}

.search-section {
    transition: all 0.5s ease;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 20px 0;
}

.search-section.centered {
    height: calc(100vh - 100px);
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
    margin-bottom: 20px;
    max-width: 600px;
    transition: all 0.5s ease;
}

.search-tabs {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-bottom: 10px;
}

.search-tabs .tab-button {
    padding: 8px 16px;
    background-color: #f1f1f1;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.2s;
}

.search-tabs .tab-button:hover {
    background-color: #e1e1e1;
}

.search-tabs .tab-button.active {
    background-color: #2ea44f;
    color: white;
}

.search-content {
    display: none;
    gap: 10px;
    justify-content: center;
}

.search-content.active {
    display: flex;
}

#searchInput, #urlInput {
    width: 400px;
    padding: 10px;
    border: 2px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
}

#searchButton, #urlButton {
    padding: 10px 20px;
    background-color: #2ea44f;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}

#searchButton:hover, #urlButton:hover {
    background-color: #2c974b;
}

.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    padding: 20px 0;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s ease;
}

.results-grid.show {
    opacity: 1;
    transform: translateY(0);
}

.repo-card {
    background: white;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    cursor: pointer;
    transition: transform 0.2s;
}

.repo-card:hover {
    transform: translateY(-5px);
}

.repo-name {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #0366d6;
}

.repo-description {
    color: #666;
    margin-bottom: 15px;
    max-height: 4.5em; /* 3行的高度 */
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3; /* 限制为3行 */
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}

.repo-stats {
    display: flex;
    gap: 15px;
    color: #666;
    font-size: 14px;
}

.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
}

.modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 20px;
    width: 80%;
    max-width: 900px;
    border-radius: 8px;
    position: relative;
    max-height: 80vh;
    overflow-y: overlay;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.1) transparent;
}

.close {
    position: absolute;
    right: 20px;
    top: 10px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.tab-container {
    margin-top: 20px;
}

.tab-buttons {
    display: flex;
    gap: 10px;
    margin-bottom: 15px;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
}

.tab-button {
    padding: 8px 16px;
    border: none;
    background-color: #f1f1f1;
    cursor: pointer;
    border-radius: 4px;
    font-size: 14px;
    transition: all 0.2s;
}

.tab-button:hover {
    background-color: #e1e1e1;
}

.tab-button.active {
    background-color: #2ea44f;
    color: white;
}

.tab-content {
    display: none;
    padding: 20px 0;
}

.tab-content.active {
    display: block;
}

/* Releases 样式 */
.release-item {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
    border: 1px solid #e1e4e8;
}

.release-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.release-header h3 {
    color: #0366d6;
    font-size: 18px;
    margin: 0;
}

.release-date {
    color: #666;
    font-size: 14px;
}

.release-body {
    margin-bottom: 20px;
    color: #24292e;
    line-height: 1.5;
}

.release-assets {
    background: white;
    border-radius: 6px;
    padding: 15px;
    border: 1px solid #e1e4e8;
}

.asset-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #e1e4e8;
}

.asset-item:last-child {
    border-bottom: none;
}

.asset-name {
    flex: 1;
    font-weight: 500;
}

.asset-size {
    color: #666;
    margin: 0 15px;
}

.asset-downloads {
    color: #666;
    margin-right: 15px;
}

.download-button {
    position: fixed;
    bottom: 30px;
    left: 30px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #2ea44f;
    color: white;
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
    transition: all 0.3s ease;
    display: none; /* 默认隐藏，有下载任务时显示 */
}

.download-button:hover {
    transform: scale(1.1);
    background-color: #2c974b;
}

.download-button svg {
    width: 24px;
    height: 24px;
}

/* 资源下载按钮样式，与固定位置的下载按钮区分 */
.asset-item .download-button {
    position: static;
    width: auto;
    height: auto;
    padding: 6px 12px;
    border-radius: 4px;
    display: inline-block;
    box-shadow: none;
    transition: background-color 0.2s;
    font-size: 14px;
}

.asset-item .download-button:hover {
    transform: none;
    background-color: #2c974b;
}

.download-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background-color: #f44336;
    color: white;
    border-radius: 50%;
    width: 22px;
    height: 22px;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

/* 下载管理器样式 */
.download-manager {
    position: fixed;
    bottom: 90px;
    left: 30px;
    width: 350px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    z-index: 998;
    display: none;
}

.download-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    border-bottom: 1px solid #e1e4e8;
}

.download-header h2 {
    margin: 0;
    color: #24292e;
    font-size: 18px;
}

.close-downloads {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #666;
}

.download-content {
    max-height: 400px;
    overflow-y: overlay;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.1) transparent;
}

.download-list {
    padding: 10px;
}

.download-item {
    padding: 12px;
    border-bottom: 1px solid #e1e4e8;
}

.download-item:last-child {
    border-bottom: none;
}

.download-item-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
}

.download-item-name {
    font-weight: 500;
    color: #24292e;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 250px;
}

.download-item-size {
    color: #666;
    font-size: 12px;
}

.download-progress-bar {
    height: 4px;
    background-color: #e1e4e8;
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 8px;
}

.download-progress-fill {
    height: 100%;
    background-color: #2ea44f;
    width: 0%;
    transition: width 0.3s ease;
}

.download-item-status {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.download-status-text {
    color: #666;
    font-size: 12px;
}

.download-item-actions {
    display: flex;
    gap: 10px;
}

.download-action-button {
    background: none;
    border: none;
    cursor: pointer;
    color: #0366d6;
    font-size: 12px;
    padding: 0;
}

.download-action-button:hover {
    text-decoration: underline;
}

.download-empty {
    padding: 30px;
    text-align: center;
    color: #666;
}

/* 下载路径设置样式 */
.download-path-input {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

.download-path-input input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #f6f8fa;
}

.download-path-input button {
    padding: 8px 16px;
    background-color: #2ea44f;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.download-path-input button:hover {
    background-color: #2c974b;
}

.download-path-tip {
    color: #666;
    font-size: 12px;
    margin-top: 5px;
}

/* 深色主题适配 */
body.dark-theme .download-button {
    background-color: #2ea44f;
}

body.dark-theme .download-manager {
    background-color: #2d2d2d;
}

body.dark-theme .download-header {
    border-color: #444;
}

body.dark-theme .download-header h2 {
    color: #e1e4e8;
}

body.dark-theme .close-downloads {
    color: #b1b1b1;
}

body.dark-theme .download-item {
    border-color: #444;
}

body.dark-theme .download-item-name {
    color: #e1e4e8;
}

body.dark-theme .download-item-size,
body.dark-theme .download-status-text,
body.dark-theme .download-empty {
    color: #b1b1b1;
}

body.dark-theme .download-progress-bar {
    background-color: #444;
}

body.dark-theme .download-action-button {
    color: #58a6ff;
}

body.dark-theme .download-path-input input {
    background-color: #2d2d2d;
    border-color: #444;
    color: #e1e4e8;
}

body.dark-theme .download-path-tip {
    color: #b1b1b1;
}

.no-releases {
    text-align: center;
    color: #666;
    padding: 20px;
    font-style: italic;
}

/* README 样式 */
.tab-content#readme {
    padding: 20px;
    background: white;
    border-radius: 8px;
    border: 1px solid #e1e4e8;
}

.tab-content#readme img {
    max-width: 100%;
    height: auto;
}

.tab-content#readme pre {
    background: #f6f8fa;
    padding: 16px;
    border-radius: 6px;
    overflow-x: auto;
}

.tab-content#readme code {
    background: #f6f8fa;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: SFMono-Regular, Consolas, Liberation Mono, Menlo, monospace;
    font-size: 85%;
}

/* 代码标签页样式 */
.view-code-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #0366d6;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.2s;
}

.view-code-button:hover {
    background-color: #024ea4;
}

/* 代码文件浏览器样式 */
.code-container {
    background: white;
    border-radius: 8px;
    border: 1px solid #e1e4e8;
    overflow: hidden;
}

.file-explorer {
    padding: 10px;
    border-bottom: 1px solid #e1e4e8;
}

.file-item {
    display: flex;
    align-items: center;
    padding: 8px;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.2s;
    margin-bottom: 2px;
    position: relative;
}

.file-item:hover {
    background-color: #f6f8fa;
}

.file-item .file-size {
    margin-left: 10px;
    color: #666;
    font-size: 12px;
}

.file-item.file-large .file-name,
.file-item.file-large .file-size {
    color: #d73a49;
}

.file-icon {
    margin-right: 8px;
    font-size: 16px;
}

.file-name {
    color: #24292e;
    font-size: 14px;
}

.file-header {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #f6f8fa;
    border-bottom: 1px solid #e1e4e8;
}

.back-button {
    padding: 6px 12px;
    background-color: #2ea44f;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-right: 10px;
}

.back-button:hover {
    background-color: #2c974b;
}

.file-path {
    color: #24292e;
    font-size: 14px;
}

.file-content {
    padding: 20px;
    overflow-x: auto;
    background-color: #f6f8fa;
    font-family: SFMono-Regular, Consolas, Liberation Mono, Menlo, monospace;
    font-size: 14px;
    line-height: 1.5;
}

.loading {
    text-align: center;
    padding: 20px;
    color: #666;
    font-style: italic;
}

/* 深色主题样式 */
body.dark-theme .code-container {
    background: #1a1a1a;
    border-color: #333;
}

body.dark-theme .file-explorer {
    border-color: #333;
}

body.dark-theme .file-item:hover {
    background-color: #2d2d2d;
}

body.dark-theme .file-item .file-size {
    color: #999;
}

body.dark-theme .file-item.file-large .file-name,
body.dark-theme .file-item.file-large .file-size {
    color: #f85149;
}

body.dark-theme .file-name {
    color: #e1e4e8;
}

body.dark-theme .file-header {
    background-color: #2d2d2d;
    border-color: #333;
}

body.dark-theme .file-path {
    color: #e1e4e8;
}

body.dark-theme .file-content {
    background-color: #1a1a1a;
    color: #e1e4e8;
}

body.dark-theme .loading {
    color: #999;
}

/* 错误处理样式 */
.error-message {
    padding: 20px;
    margin: 10px;
    background-color: #ffebee;
    border: 1px solid #ffcdd2;
    border-radius: 4px;
    color: #c62828;
    text-align: center;
}

.error-message h3 {
    margin-top: 0;
    color: #c62828;
}

.error-actions {
    margin-top: 20px;
    display: flex;
    justify-content: center;
    gap: 10px;
}

.retry-button, .close-button {
    padding: 8px 16px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    border: none;
}

.retry-button {
    background-color: #2ea44f;
    color: white;
}

.retry-button:hover {
    background-color: #2c974b;
}

.close-button {
    background-color: #e1e4e8;
    color: #24292e;
}

.close-button:hover {
    background-color: #d1d5da;
}

.token-tip {
    color: #666;
    font-size: 12px;
    margin-top: 10px;
    font-style: italic;
}

/* 深色主题样式 */
body.dark-theme .error-message {
    background-color: #311b1b;
    border-color: #4a1c1c;
    color: #ef9a9a;
}

body.dark-theme .error-message h3 {
    color: #ef9a9a;
}

body.dark-theme .close-button {
    background-color: #444;
    color: #e1e4e8;
}

body.dark-theme .close-button:hover {
    background-color: #555;
}

body.dark-theme .token-tip {
    color: #b1b1b1;
}

body.dark-theme .no-releases p {
    color: #b1b1b1;
}

/* 设置按钮样式 */
.settings-button {
    position: fixed;
    top: 50px;
    right: 30px;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background-color: #2ea44f;
    color: white;
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
    transition: all 0.3s ease;
}

.settings-button:hover {
    transform: scale(1.1);
    background-color: #2c974b;
}

.settings-button svg {
    width: 24px;
    height: 24px;
}

/* 设置面板样式 */
.settings-panel {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    display: none;
}

.settings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    border-bottom: 1px solid #e1e4e8;
}

.settings-header h2 {
    margin: 0;
    color: #24292e;
    font-size: 18px;
}

.close-settings {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #666;
}

.settings-content {
    padding: 20px;
}

.settings-group {
    margin-bottom: 20px;
}

.settings-group h3 {
    margin: 0 0 10px 0;
    color: #24292e;
    font-size: 16px;
}

.theme-options {
    display: flex;
    gap: 20px;
}

.theme-options label {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.theme-options input {
    margin-right: 8px;
}

.token-input {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

.token-input input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.token-input button {
    padding: 8px 16px;
    background-color: #2ea44f;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.token-input button:hover {
    background-color: #2c974b;
}

.token-tip {
    margin: 5px 0 0 0;
    color: #666;
    font-size: 12px;
}

/* 深色主题样式 */
body.dark-theme {
    background-color: #1a1a1a;
    color: #e1e4e8;
}

body.dark-theme .container {
    background-color: #1a1a1a;
}

body.dark-theme h1,
body.dark-theme h2,
body.dark-theme h3 {
    color: #e1e4e8;
}

body.dark-theme #searchInput,
body.dark-theme #urlInput,
body.dark-theme .token-input input {
    background-color: #2d2d2d;
    border-color: #444;
    color: #e1e4e8;
}

body.dark-theme .repo-card {
    background-color: #2d2d2d;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

body.dark-theme .repo-description {
    color: #b1b1b1;
}

body.dark-theme .repo-stats {
    color: #b1b1b1;
}

body.dark-theme .modal-content {
    background-color: #2d2d2d;
}

body.dark-theme .settings-panel {
    background-color: #2d2d2d;
}

body.dark-theme .settings-header {
    border-color: #444;
}

body.dark-theme .close-settings {
    color: #b1b1b1;
}

body.dark-theme .settings-header h2,
body.dark-theme .settings-group h3 {
    color: #e1e4e8;
}

body.dark-theme .token-tip {
    color: #b1b1b1;
}

.card-display-options, .display-options {
    margin-top: 10px;
}

.card-display-options {
    display: flex;
    gap: 20px;
}

.card-display-options label,
.display-options label {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.card-display-options input,
.display-options input {
    margin-right: 8px;
}

.results-grid.list-view {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.results-grid.list-view .repo-card {
    display: flex;
    align-items: center;
    padding: 15px;
}

.results-grid.list-view .repo-card .repo-info {
    flex: 1;
}

.results-grid.list-view .repo-card .repo-name {
    font-size: 16px;
    margin-bottom: 5px;
}

.results-grid.list-view .repo-card .repo-description {
    margin-bottom: 5px;
    max-width: 700px;
}

.results-grid.list-view .repo-card .repo-stats {
    margin-left: auto;
    display: flex;
    gap: 15px;
}

/* 徽章样式 */
.repo-badge {
    height: 20px;
    margin-left: 10px;
    vertical-align: middle;
}

.results-grid.list-view .repo-badge {
