        flex-direction: row;
        overflow-x: auto;
        padding: 10px 0;
        justify-content: flex-start;
        margin: 10px 0;
    }
    
    .time-filter-btn {
        padding: 6px 12px;
        font-size: 13px;
        flex-shrink: 0;
    }
}

