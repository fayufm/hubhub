{
  "name": "hubhub",
  "version": "2.0.0",
  "description": "GitHub项目搜索工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:installer": "electron-builder --win nsis",
    "build:portable": "electron-builder --win portable"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "marked": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.hubhub.app",
    "productName": "HubHub",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/26.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HubHub - GitHub项目搜索工具"
    },
    "portable": {
      "artifactName": "HubHub-便携版-${version}.exe"
    },
    "directories": {
      "output": "dist"
    }
  }
}
